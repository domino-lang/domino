package Nonces {
    params {
        n: Integer,
        b: Bool,
    }
    
    state {
          Nonces:   Table(Bits(n),Bool),       /* store nonces */
    }

    oracle Sample() -> Bits(n) {
        ni         <-$ Bits(n);
        if b
        {assert (Nonces[ni] == None);
        Nonces[ni] <- Some(true);}
        return ni;
    }
}
