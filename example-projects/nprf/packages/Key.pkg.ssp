package Key {
    types {
        Handle,
        Key,
    }

    params {
        ideal: Bool,
    }

    state {
        keys: Table(Handle, Key),
        prs:  Table(Handle, Bool), /* is_pseudorandom */
    }

    oracle Set(hdl: Handle, k: Key, pr: Bool) {
        /* _should_ imply the rest is unset as well */
        if not(keys[hdl] == None as Bits(n)) {
            abort;
        }

        if (pr and ideal) {
            k <-$ Key;
        }

        keys[hdl] <- Some(k);
        prs[hdl] <- Some(pr);
    }

    oracle Get(hdl: Handle) -> Key {
        mk <- keys[hdl];
        return Unwrap(mk);
    }

    oracle PR(hdl: Handle) -> Bool {
        mpr <- prs[hdl];
        return Unwrap(mpr);
    }
}