package LayeredSimProxy {
    params {
        p: Integer,
        d: Integer, /* number of layers of the circuit */
    }

    import oracles {
        LSIMGBLG(
            i: Integer,
            l: Integer,
            r: Integer,
            op: Table((Bool, Bool), Bool),
            j: Integer
        ) -> Table(Bits(p), Bool),
    }

    oracle GBLG(
        i: Integer,
        l: Integer,
        r: Integer,
        op: Table((Bool, Bool), Bool),
        j: Integer
    ) -> Table(Bits(p), Bool) {
        assert (i > 0);
        assert (i <= d);
        C <- invoke LSIMGBLG(i, l, r, op, j);
        return C;
    }
}