composition GameSplit {
    types {
        Elem,
    }

    const b: Bool;

    instance pair = Pair {
        params {
            b: b,
        }

        types {
            Elem: Elem,
        }

    }

    instance client = Client {
        types {
            Elem: Elem,
        }

    }
    compose {
        adversary: {
            Query: client,
        }
        client: {
            GetPair: pair,
        }
    }
}
